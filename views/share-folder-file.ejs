<div class="library-layout">
    <% if (locals.fileInfo) { %>
        <div>
            <% if(fileInfo.has_parent_folder && fileInfo.folderId){ %>
            <a href="/share/view?id=<%= fileInfo.req_id %>&folderid=<%= fileInfo.folderId %>" class="lib-back lib-icon">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="30"
                height="30"
                fill="currentColor"
                class="bi bi-arrow-left-circle"
                viewBox="0 0 16 16"
              >
                <path
                  fill-rule="evenodd"
                  d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z"
                />
              </svg>
              Go Back
            </a>
            <% } %>
        </div>
    <% if(fileInfo.fileName && fileInfo.createdAt && fileInfo.filePath) { %>
    <div class="file-card">
      <div class="file-card__cover">
        <div class="file-card__div-header">
          <h3 class="file-card__div-header__h3">File Information</h3>
          <p class="file-card__div-header__p">
            You can download the file here
          </p>
        </div>
        <div class="flex-card__div">
          <dl class="file-card__div-dl">
            <div class="file-card__div-items">
              <dt class="file-card__div-items--dt">File Name</dt>
              <dd class="file-card__div-items--dd"><%= fileInfo.fileName %></dd>
            </div>
            <div class="file-card__div-items">
              <dt class="file-card__div-items--dt">Created At</dt>
              <dd class="file-card__div-items--dd">
                <%= fileInfo.formattedCreatedAt %>
              </dd>
            </div>
            <div class="file-card__div-items">
              <dt class="file-card__div-items--dt">Updated At</dt>
              <dd class="file-card__div-items--dd">
                <%= fileInfo. formattedUpdatedAt %>
              </dd>
            </div>
            <div class="file-card__div-items">
              <dt class="file-card__div-items--dt">File Size</dt>
              <dd class="file-card__div-items--dd"><%= fileInfo.size %> KB</dd>
            </div>
          </dl>
        </div>
        <% } %>
  
        <div class="btn-div-style">
          <button
            class="library-btn lib-icon"
            id="edit-btn"
            onclick="downloadFile('<%= fileInfo.fileName %>','<%= fileInfo.filePath %>')"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="30"
              height="30"
              fill="currentColor"
              class="bi bi-cloud-arrow-down"
              viewBox="0 0 16 16"
            >
              <path
                fill-rule="evenodd"
                d="M7.646 10.854a.5.5 0 0 0 .708 0l2-2a.5.5 0 0 0-.708-.708L8.5 9.293V5.5a.5.5 0 0 0-1 0v3.793L6.354 8.146a.5.5 0 1 0-.708.708z"
              />
              <path
                d="M4.406 3.342A5.53 5.53 0 0 1 8 2c2.69 0 4.923 2 5.166 4.579C14.758 6.804 16 8.137 16 9.773 16 11.569 14.502 13 12.687 13H3.781C1.708 13 0 11.366 0 9.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383m.653.757c-.757.653-1.153 1.44-1.153 2.056v.448l-.445.049C2.064 6.805 1 7.952 1 9.318 1 10.785 2.23 12 3.781 12h8.906C13.98 12 15 10.988 15 9.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 4.825 10.328 3 8 3a4.53 4.53 0 0 0-2.941 1.1z"
              />
            </svg>
            Download File
          </button>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  